<h1>Home Page</h1>

<button id="loadDataBtn">Load Data</button>

<div id="result" style="margin-top: 1rem; color: blue;"></div>

<script>
jQuery(document).ready(function () {
    jQuery("#loadDataBtn").on("click", function () {
        jQuery.ajax({
            url: "/home/data", // this hits home->dataAction
            method: "GET",
            dataType: "json",
            success: function (data) {
                jQuery("#result").html(`
                    <h2>${data.message}</h2>
                    <h3>${data.timestamp}</h3>
                `);
            },
            error: function (jqXHR) {
                jQuery("#result").html(`<span style="color:red;">Error: ${jqXHR.statusText || "Network error"}</span>`);
            }
        });
    });
});
</script>